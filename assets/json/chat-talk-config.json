    "humanHandoff": {
      "message": "상담원에게 연결해드리겠습니다. 잠시만 기다려주세요.",
      "action": "connectAgent",
      "endpoint": "/api/chat-talk/transfer-to-human"
    }
  },
  "settings": {
    "saveAllInteractions": true,
    "responseDelay": 1000,
    "typingIndicator": true,
    "maxRetries": 3,
    "sessionTimeout": 1800000,
    "apiEndpoint": "/api/chat-talk/chatbot",
    "enableAnalytics": true
  }
